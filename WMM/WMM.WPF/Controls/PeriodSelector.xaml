<UserControl x:Class="WMM.WPF.Controls.PeriodSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WMM.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            
        <ComboBox Grid.Column="0" Name="ShortcutSelection" SelectionChanged="ShortcutSelection_OnSelectionChanged" />
        <DatePicker Grid.Column="1" Name="DateFromSelection" SelectedDateChanged="DateFromSelection_OnSelectedDateChanged"/>
        <DatePicker Grid.Column="2" Name="DateUntilSelection" SelectedDateChanged="DateUntilSelection_OnSelectedDateChanged"/>
    </Grid>
</UserControl>
