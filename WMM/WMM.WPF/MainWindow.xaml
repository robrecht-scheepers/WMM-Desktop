<Window x:Class="WMM.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMM.WPF"
        xmlns:data="clr-namespace:WMM.Data;assembly=WMM.Data"
        xmlns:controls="clr-namespace:WMM.WPF.Controls"
        mc:Ignorable="d"
        Title="Where's my money?" 
        WindowState="Maximized"
        Background="{StaticResource SCB1}"
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        Name="WindowRoot">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Balances/MonthBalanceView.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="{StaticResource SCB5}" Margin="{StaticResource GridMargin}">
            <TextBlock Text="Übersicht" Style="{StaticResource TitleStyle}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <controls:ImageButton HorizontalAlignment="Left" Command="{Binding ShowRecurringTransactionsCommand}" ImageSource="/Resources/ic_recurring.png"/>
            </StackPanel>
        </Grid>

        <Grid Name="BalanceOverview" Grid.Row="1" Grid.Column="0">
            <ListView ItemsSource="{Binding MonthBalanceViewModels}" HorizontalContentAlignment="Stretch"
                      ItemTemplate="{StaticResource MonthBalanceView}" Background="Transparent" BorderThickness="0"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1" Background="{StaticResource SCB5}" Margin="{StaticResource GridMargin}">
            <TextBlock Text="Details" Style="{StaticResource TitleStyle}" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                
            </StackPanel>
        </Grid>

        <Grid Name="Details" Grid.Row="1" Grid.Column="1"/>

        <Grid Grid.Row="0" Grid.Column="2" Background="{StaticResource SCB5}" Margin="{StaticResource GridMargin}">
            <TextBlock Text="Hinzufügen" Style="{StaticResource TitleStyle}" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                
            </StackPanel>
        </Grid>
        <Grid Name="Add" Grid.Row="1" Grid.Column="2" DataContext="{Binding AddTransactionsViewModel}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Background="{StaticResource SCB4}" Grid.Row="0" Margin="{StaticResource CommonMargin}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <TextBlock Text="Datum"/>
                    <DatePicker SelectedDate="{Binding NewTransactionDate, Mode=TwoWay}" />
                    <TextBlock Text="Kategorie"/>
                    <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding NewTransactionCategory, Mode=TwoWay}"/>
                    <TextBlock Text="Betrag"/>
                    <ComboBox ItemsSource="{Binding Signs}" SelectedItem="{Binding SelectedSign, Mode=TwoWay}" />
                    <TextBox Text="{Binding Path=NewTransactionAmount, StringFormat=C, Mode=TwoWay}" />
                    <Button Command="{Binding AddTransactionCommand}">Add</Button>
                </StackPanel>
            </Grid>
            <DataGrid Grid.Row="1" ItemsSource="{Binding AddedTransactions}" AutoGenerateColumns="False" IsReadOnly="True" Margin="{StaticResource CommonMargin}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Date, StringFormat='dd.MMM.yyyy'}"/>
                    <DataGridTextColumn Binding="{Binding Category}"/>
                    <DataGridTextColumn Binding="{Binding Amount, StringFormat=C}"/>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type data:Transaction}">
                                <Button Command="{Binding ElementName=WindowRoot, Path=DataContext.AddTransactionsViewModel.DeleteTransactionCommand}" CommandParameter="{Binding}">X</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Name="StatusBar" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
        </Grid>

    </Grid>
</Window>
